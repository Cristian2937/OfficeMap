{% extends 'footer_template.html.twig' %}

{% block title %}Utente index{% endblock %}

{% block center_page %}
    <h1>Utente index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
<!--                <th>Password</th>-->
                <th>Stato</th>
                <th>Ruolo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for utente in utentes %}
            <tr>
                <td>{{ utente.id }}</td>
                <td>{{ utente.email }}</td>
<!--                <td>{{ utente.password }}</td>-->
                <td>{{ utente.stato }}</td>
                <td>{{ utente.ruolo.codice }}</td>

                <td>
                    <a href="{{ path('app_utente_show', {'id': utente.id}) }}">show</a>
                    <a href="{{ path('app_utente_edit', {'id': utente.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_utente_new') }}">Create new</a>
{% endblock %}
